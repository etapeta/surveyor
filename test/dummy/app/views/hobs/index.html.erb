<h1>HOBS</h1>

<ul>
  <% @surveys.each do |surv,nests| %>
    <li><%= link_to surv.name, new_hob_path(:survey => surv.name) %></li>
    <% unless nests.empty? %>
      <ul>
        <% nests.each do |nest| %>
          <li><%= link_to "#{surv.name} ##{nest.id}", edit_hob_path(nest, :survey => surv.name) %></li>
          <% surv.sheets.keys.each do |sheet_name| %>
            <li><%= link_to "#{surv.name} ##{nest.id} [#{sheet_name}]", edit_hob_path(nest, :survey => surv.name, :sheet => sheet_name) %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</ul>
